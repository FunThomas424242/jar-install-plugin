<?xml version="1.0"?>
<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>prepare</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <phases>
                    <pre-download>
                    </pre-download>
                    <download>
                        com.github.funthomas424242:jar-install-plugin:${project.version}:install
                    </download>
                    <post-download>
                    </post-download>
                </phases>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.lifecycle.Lifecycle</role>
            <implementation>org.apache.maven.lifecycle.Lifecycle</implementation>
            <role-hint>prepare</role-hint>
            <configuration>
                <id>prepare</id>
                <phases>
                    <phase>pre-download</phase>
                    <phase>download</phase>
                    <phase>post-download</phase>
                </phases>
                <default-phases>
                    <pre-download>
                    </pre-download>
                    <download>
                        com.github.funthomas424242:jar-install-plugin:${project.version}:install
                    </download>
                    <post-download>
                    </post-download>
                </default-phases>
            </configuration>
        </component>


        <!-- Artifact Handlers -->
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>plexus-service</role-hint>
<!--            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>-->
            <implementation>com.github.funthomas424242.maven.plugins.jarinstall.LegacyJarHandler</implementation>
            <configuration>
                <type>legacy-jar</type>
                <extension>jar</extension>
                <packaging>jar</packaging>
            </configuration>
        </component>
    </components>
</component-set>

